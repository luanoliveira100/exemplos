@model IEnumerable<CondominioEstribo.Models.EntradaMercadoria>

@{
    ViewBag.Title = "Lista De Entrada De Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Lista De Entrada De Mercadoria</h2>
        <br />
        <br />
        @using (Html.BeginForm("ListarDados", "EntradaMercadoria", FormMethod.Post))
        {
            <p><b>Buscar por Data</b></p>
            <div class="form-horizontal">
                <div class="col-md-3">
                    @Html.TextBox("txtData", "", new { @class = "form-control", placeholder = "Informe uma Data", autofocus = "autofocus", tabindex = "1", onkeyup = "formataData(this,event)", maxlength = "10" })
                </div>
                <div class="col-md-0">
                    <button type="submit" class="btn btn-warning" tabindex="2">Pesquisar</button>
                    @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
                </div>


            </div>
        }
        <br />
        <div class="alert alert-dismissible alert-info col-md-9">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Para mais Informações click em Detalhes.</strong>
        </div>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    Produto
                </th>
                <th>
                    Fornecedor
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Data Da Entrada
                </th>
                <th>
                    Valor Da Nota Fiscal
                </th>
                <th>
                    Observação
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoEntradaMercadoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FornecedorEntradaMercadoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantidadeInserida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDaEntrada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotalDaNF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.EntradaMercadoriaId }, new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Alterar", "Edit", new { id = item.EntradaMercadoriaId }, new { @class = "btn btn-warning btn-xs" })
                        @*<button type="submit" class="btn btn-warning btn-xs" onclick="MensagemConfirma('Atenção', 'Ao Editar as Informações a Data de Entrada Também será Alterada para a Data Atual. Deseja Continuar ?' , '@Url.Action("Edit","EntradaMercadoria", new { id = item.EntradaMercadoriaId})')">Editar</button>*@
                        @*<button type="submit" class="btn btn-danger btn-xs" onclick="MensagemConfirma('Atenção', 'Deseja Realmente Inativar este Registro ?', '@Url.Action("InativarEntradaDeProduto","EntradaMercadoria", new { id = item.EntradaMercadoriaId})')">Inativar</button>*@
                    </td>
                </tr>
            }

        </table>

        <br />
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
    </div>
</div>
<br />
<script src="~/JS/Mascara.js" type="text/javascript"></script>

