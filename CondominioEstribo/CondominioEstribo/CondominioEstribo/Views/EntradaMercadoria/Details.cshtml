@model CondominioEstribo.Models.EntradaMercadoria

@{
    ViewBag.Title = "Detalhes Da Entrada De Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="well">
        <h2>Detalhes Da Entrada De Mercadoria</h2>
        <br />
        <br />

        <div>
            <dl class="dl-horizontal">
                <dt>
                    <h4><b>Produto:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.ProdutoEntradaMercadoria)</h4>
                </dd>

                <dt>
                    <h4><b>Fornecedor:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.FornecedorEntradaMercadoria)</h4>
                </dd>

                <dt>
                    <h4><b>Quantidade:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.QuantidadeInserida)</h4>
                </dd>

                <dt>
                    <h4><b>Valor Da N.F:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.ValorTotalDaNF)</h4>
                </dd>

                <dt>
                    <h4><b>Data Da Entrada:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.DataDaEntrada)</h4>
                </dd>

                <dt>
                    <h4><b>Observação:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.Observacao)</h4>
                </dd>

            </dl>
        </div>

        <br />

        <div class="form-group">
            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Alterar", "Edit", new { id = Model.EntradaMercadoriaId }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
<br />
