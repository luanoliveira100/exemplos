@model CondominioEstribo.Models.EntradaMercadoria

@{
    ViewBag.Title = "Alterar Cadastro De Entrada De Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Alterar Entrada De Mercadoria</h2>
        <br />
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.HiddenFor(model => model.EntradaMercadoriaId)
               
                <div class="form-group">
                    @Html.Label("lblProduto", "Produto*", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DropProduto", (List<SelectListItem>)ViewBag.Produto, "--Selecione o Produto--", new { @class = "form-control", autofocus = "autofocus", required = "true" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("lblFornecedor", "Fornecedor*", new { @class = "control-label  col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DropFornecedor", (List<SelectListItem>)ViewBag.Fornecedor, "--Selecione o Fornecedor--", new { @class = "form-control", required = "true" })
                    </div>
                </div>  

                 

                @*<div class="form-group">
                    @Html.LabelFor(model => model.ProdutoEntradaMercadoria, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ProdutoEntradaMercadoria, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>*@               
           

                @*<div class="form-group">
                    @Html.LabelFor(model => model.FornecedorEntradaMercadoria, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FornecedorEntradaMercadoria, new { htmlAttributes = new { @class = "form-control"} })
                    </div>
                </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.DataDaEntrada, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataDaEntrada, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Data", required = "true" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ValorTotalDaNF, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ValorTotalDaNF, new { htmlAttributes = new { @class = "form-control", onkeyup = "formataValor(this,event)", placeholder = "Informe o Valor da Nota Fiscal", required = "true" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.QuantidadeInserida, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.QuantidadeInserida, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Quantidade", required = "true" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
                        <input type="submit" value="Gravar" class="btn btn-success" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>


<script src="~/Scripts/jquery-1.12.4.min.js"></script>

@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: 'dd/mm/yy',
                dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
                dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
                dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
                monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
                monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
                nextText: 'Proximo',
                prevText: 'Anterior',
                showOn: "button"
            }).css("display", "inline-block")
            .next("button").button({
                icons: { primary: "ui-icon-calendar" },
                //label: "Selecione uma data",
                text: false
            });
        });
    </script>
}   