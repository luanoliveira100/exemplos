@model CondominioEstribo.Models.Inquilino

@{
    ViewBag.Title = "Detalhes Do Inquilino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="well">
        <h2>Detalhes Do Inquilino</h2>

        <br />
        <br />

        <div>

            <dl class="dl-horizontal">
                <dt>
                    <h4><b>Nome:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.NomeInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>CPF:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.CPFInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>RG:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.RGInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>Telefone Celular:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.TelefoneInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>Email:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.EmailInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>Status:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.FlagStatus)</h4>
                </dd>

                <dt>
                    <h4><b>Lote:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.LoteInquilino)</h4>
                </dd>

                <dt>
                    <h4><b>Observação:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.Observacao)</h4>
                </dd>

            </dl>
        </div>
        <br />

        <div class="form-group">
                @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Alterar", "Edit", new { id = Model.UsuarioId }, new { @class = "btn btn-warning" })                                  
        </div>

    </div>
</div>
<br />
<br />