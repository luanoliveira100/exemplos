@model IEnumerable<CondominioEstribo.Models.SaidaMercadoria>

@{
    ViewBag.Title = "Lista Saída Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Lista De Saída De Mercadoria</h2>
        <br />
        <br />
        @using (Html.BeginForm("Index", "SaidaMercadoria", FormMethod.Post))
        {
            <p><b>Buscar por Data</b></p>
            <div class="form-horizontal">
                <div class="col-md-3">
                    @Html.TextBox("txtData", "", new { @class = "form-control", placeholder = "Informe uma Data", autofocus = "autofocus", tabindex = "1", onkeyup = "formataData(this,event)", maxlength = "10" })
                </div>
                <div class="col-md-0">
                    <button type="submit" class="btn btn-warning" tabindex="2">Pesquisar</button>
                    @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
                </div>


            </div>
        }
        <br />
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    Produto
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Data Da Retirada
                </th>
                <th>
                    Funcionário
                </th>
                <th>
                    Observação
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.ProdutoSaidaMercadoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantidadeRetirada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRetirada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FuncionarioSaidaMercadoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.SaidaMercadoriaId }, new { @class = "btn btn-info btn-xs" })
                        <button type="submit" class="btn btn-warning btn-xs" onclick="MensagemConfirma('Atenção', 'Ao Editar as Informações a Data de Saída também será Alterada para a Data Atual. Deseja Continuar ?', '@Url.Action("Edit","SaidaMercadoria", new { id = item.SaidaMercadoriaId})')">Editar</button>
                        @*@Html.ActionLink("Alterar", "Edit", new { id = item.SaidaMercadoriaId }, new { @class = "btn btn-warning btn-xs" })
                        <button type="submit" class="btn btn-danger btn-xs" onclick="MensagemConfirma('Atenção', 'Deseja Realmente Excluir este Registro ?', '@Url.Action("DeletarRegistro","SaidaMercadoria", new { id = item.SaidaMercadoriaId})')">Excluir</button>*@
                    </td>
                </tr>
            }
        </table>
        <br />
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
<br />

