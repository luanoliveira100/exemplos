@model CondominioEstribo.Models.SaidaMercadoria

@{
    ViewBag.Title = "Detalhes Da Saída De Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Detalhes Da Saída De Mercadoria</h2>
        <br />
        <br />
        <div>
            <dl class="dl-horizontal">
                <dt>
                    <h4><b>Produto:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.ProdutoSaidaMercadoria)</h4>
                </dd>

                <dt>
                    <h4><b>Quantidade:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.QuantidadeRetirada)</h4>
                </dd>

                <dt>
                    <h4><b>Data Da Retirada:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.DataRetirada)</h4>
                </dd>

                <dt>
                    <h4><b>Funcionário:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.FuncionarioSaidaMercadoria)</h4>
                </dd>

                <dt>
                    <h4><b>Observação:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.Observacao)</h4>
                </dd>

            </dl>
        </div>
        <br />

        <div class="form-group">
            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Alterar", "Edit", new { id = Model.SaidaMercadoriaId }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
<br />
