@model CondominioEstribo.Models.Obra

@{
    ViewBag.Title = "Alterar Cadastro Obras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="well">
        <h2>Alterar Cadastro Obras</h2>
        <br />
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.HiddenFor(model => model.ObraId)
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TipoObra, new { htmlAttributes = new { @class = "form-control", autofocus = "autofocus", tabindex = "1", required = "true"} })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.DescricaoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DescricaoObra, new { htmlAttributes = new { @class = "form-control", required = true, tabindex = "2"} })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("LblStatus", "Status*", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DropStatus", new List<SelectListItem>{
                            new SelectListItem{ Text = "Em Andamento", Value = "1", },
                            new SelectListItem{ Text = "Concluída", Value = "2"},
                                }, "--Selecione--", new { @class = "form-control", tabindex = "3" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ValorObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ValorObra, new { htmlAttributes = new { @class = "form-control", required = true, onkeyup = "formataValor(this,event)", tabindex = "4" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataInicioObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataInicioObra, new { htmlAttributes = new { @class = "form-control", required = true, tabindex = "5" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataTerminoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataTerminoObra, new { htmlAttributes = new { @class = "form-control", required = true, tabindex = "6" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger", tabindex = "8" })
                        <input type="submit" value="Gravar" class="btn btn-success" tabindex="7"/>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
<br />

@section Scripts {
    <script type="text/javascript" language="javascript">
        $(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: 'dd/mm/yy',
                dayNames: ['Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sábado'],
                dayNamesMin: ['D', 'S', 'T', 'Q', 'Q', 'S', 'S', 'D'],
                dayNamesShort: ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
                monthNames: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
                monthNamesShort: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez'],
                nextText: 'Proximo',
                prevText: 'Anterior',
                showOn: "button"
            }).css("display", "inline-block")
            .next("button").button({
                icons: { primary: "ui-icon-calendar" },
                //label: "Selecione uma data",
                text: false
            });
        });
    </script>
}