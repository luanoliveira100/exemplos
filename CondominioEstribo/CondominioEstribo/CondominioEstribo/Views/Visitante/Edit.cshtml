@model CondominioEstribo.Models.Visitante

@{
    ViewBag.Title = "Alterar Cadastro De Visitante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <br />
    <div class="well">

        <h2><b>Alterar Visitante</b></h2>
        <br />

        @using (Html.BeginForm())
        {

            @Html.AntiForgeryToken()
            <div class="form-horizontal">

                @Html.HiddenFor(model => model.VisitanteId)
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeVisitante, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeVisitante, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o Nome do Vistante", required = "true", autofocus = "autofocus", tabindex = "1", texttransform = "uppercase" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.PlacaVeiculoVisitante, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PlacaVeiculoVisitante, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Placa do Veículo", required = "true", tabindex = "4", maxlength = "8" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.DataEntrada, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataEntrada, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Data de Entrada", required = "true", tabindex = "2", onkeyup = "formataData(this,event)", maxlength = "10" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.DataSaida, htmlAttributes: new { @class = "control-label col-md-2 " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataSaida, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Data de Saída", required = "true", tabindex = "3", onkeyup = "formataData(this,event)", maxlength = "10" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NomeDoCondomino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeDoCondomino, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do Condômino a Visitar", tabindex = "5", required = "true" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label  col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe aqui uma Observação", required = "true", tabindex = "6", } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
                        <input type="submit" value="Gravar" id="Gravar" class="btn btn-success" tabindex="7" />
                    </div>                    
                </div>
            </div>

        }
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
<br />