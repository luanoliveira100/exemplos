@model CondominioEstribo.Models.Cargo

@{
    ViewBag.Title = "Excluir Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Excluir Cargo</h2>

<br />

<div>
    <h4>Cargo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomeCargo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomeCargo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Observacao)
        </dd>

    </dl>


    <h3>Deseja realmente excluir este Cargo ?</h3>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <div class="col-md-1">
                <input type="submit" value="Excluir" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-1">
                <a href="javascript:window.history.go(-1)" class="btn btn-default">Voltar</a>
            </div>
        </div>
    }
</div>

<script src="~/JS/Mascara.js" type="text/javascript"></script>