@model CondominioEstribo.Models.CadastroVeiculoFuncionario

@{
    ViewBag.Title = "Alterar Veículo De Funcionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="well">
        <h2>Alterar Veículo De Funcionário</h2>
        <br />

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.HiddenFor(model => model.CadastroVeiculoFuncionarioId)
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeDoFuncionario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeDoFuncionario, new { htmlAttributes = new { @class = "form-control", @readonly = "true"} })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PlacaVeiculoFuncionario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PlacaVeiculoFuncionario, new { htmlAttributes = new { @class = "form-control", required = "true", autofocus = "autofocus", tabindex = "1", placeholder = "Informe a Placa do Veículo", maxlength = "8" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger", tabindex = "3" })
                        <input type="submit" value="Gravar" class="btn btn-success" tabindex="2"  />
                    </div>
                </div>

            </div>
        }
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
<br />

