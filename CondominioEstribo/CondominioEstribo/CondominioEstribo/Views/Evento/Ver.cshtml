@model IEnumerable<CondominioEstribo.Models.Evento>

@{
    ViewBag.Title = "Lista De Reservas";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Lista De Reservas Das Areas Comuns</h2>

        <br />
        <br />

        @using (Html.BeginForm("Ver", "Evento", FormMethod.Post))
        {
            <p><b>Buscar por Data</b></p>
            <div class="form-horizontal">
                <div class="col-md-3">
                    @Html.TextBox("txtData", "", new { @class = "form-control", placeholder = "Informe uma Data", autofocus = "autofocus", tabindex = "1" })
                </div>
                <div class="col-md-0">
                    <button type="submit" class="btn btn-warning" tabindex="2">Pesquisar</button>
                    @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
        <br />
        <div class="alert alert-dismissible alert-info col-md-9">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Para mais Informações click em Detalhes.</strong>
        </div>

        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataInicial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataFinal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaTodo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataInicial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataFinal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaTodo)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.EventoId }, new { @class = "btn btn-info btn-xs" })
                    </td>
                </tr>
            }

        </table>
        <br />
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
        <br />
        <br />

    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>



