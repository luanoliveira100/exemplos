@model CondominioEstribo.Models.Cargo

@{
    ViewBag.Title = "Detalhes Do Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes Do Cargo</h2>

<br />
<br />

<div>

    <dl class="dl-horizontal">
        <dt>
           <h5><b>Cargo:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.NomeCargo)</h5>
        </dd>
        <dt>
            <h5><b>Status:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.FlagStatus)</h5>
        </dd>
        <dt>
            <h5><b>Observação:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.Observacao)</h5>
        </dd>
    </dl>
</div>

<br />

<div class="row">
    <div class="col-md-1">
        @Html.ActionLink("Editar", "Edit", new { id = Model.CargoId }, new { @class = "btn btn-warning" })

    </div>
    <div class="col-md-1">
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
    </div>
</div>


<br />
