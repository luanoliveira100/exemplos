@model CondominioEstribo.Models.Lote

@{
    ViewBag.Title = "Detalhes Do Lote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes Do Lote</h2>

<br />
<br />

<div>

    <dl class="dl-horizontal">
        <dt>
            <h5><b>Número Do Lote:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.NumeroLote)</h5>
        </dd>

        <dt>
            <h5><b>Possui Área Contruída:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.AreaConstruida)</h5>
        </dd>

        <dt>
            <h5><b>Observação:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.Observacao)</h5>
        </dd>

    </dl>
</div>


<br />

<div class="row">
    <div class="col-md-1">
        @Html.ActionLink("Editar", "Edit", new { id = Model.LoteId }, new { @class = "btn btn-warning" })

    </div>
    <div class="col-md-1">
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
    </div>
</div>


<br />
