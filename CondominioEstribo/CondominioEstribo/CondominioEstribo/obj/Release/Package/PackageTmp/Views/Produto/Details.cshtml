@model CondominioEstribo.Models.Produto

@{
    ViewBag.Title = "Detalhes Do Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes Do Produto</h2>

<br />
<br />


<div>

    <dl class="dl-horizontal">

        <dt>
            <h5><b>Produto:</b></h5>
        </dt>
        <dd>
            <h5>@Html.DisplayFor(model => model.NomeProduto)</h5>
        </dd>

        <dt>
            <h5><b>Descrição:</b></h5>
        </dt>

        <dd>
           <h5>@Html.DisplayFor(model => model.Descricao)</h5>
        </dd>

        <dt>
            <h5><b>Quantidade Mínima:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.QuantidadeMinima)</h5>
        </dd>

        <dt>
            <h5><b>Quantidade Atual:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.QuantidadeAtual)</h5>
        </dd>

        <dt>
            <h5><b>Observação:</b></h5>
        </dt>

        <dd>
            <h5>@Html.DisplayFor(model => model.Observacao)</h5>
        </dd>
                
    </dl>
</div>

<br />

<div class="row">
    <div class="col-md-1">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ProdutoId }, new { @class = "btn btn-warning" })

    </div>
    <div class="col-md-1">
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
    </div>
</div>


<br />
