@model IEnumerable<CondominioEstribo.Models.Placa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="well">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numeroPlaca)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.numeroPlaca)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.placaId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.placaId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.placaId })
                </td>
            </tr>
        }

    </table>
</div>