@model IEnumerable<CondominioEstribo.Models.Lote>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.3.1/css/buttons.dataTables.min.css" />


<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
           // dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="well">
    <table  cellspacing="2" cellpadding="2" border="1" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroLote)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaConstruida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Observacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.proprietario.Nome)
                </th>
                <th>
                    Acões
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroLote)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaConstruida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.proprietario.Nome)
                    </td>
                    <td>                     
                        @Html.ActionLink("Edit", "Edit", new { id = item.LoteId }, new { @class = "btn btn-info btn-xs" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LoteId }, new { @class = "btn btn-warning btn-xs" }) |                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>