@model CondominioEstribo.Models.Cargo

@{
    ViewBag.Title = "Detalhes Do Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Detalhes Do Cargo</h2>

        <br />
        <br />

        <div>

            <dl class="dl-horizontal">
                <dt>
                    <h4><b>Cargo:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.NomeCargo)</h4>
                </dd>
                <dt>
                    <h4><b>Status:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.FlagStatus)</h4>
                </dd>
                <dt>
                    <h4><b>Observação:</b></h4>
                </dt>

                <dd>
                    <h4>@Html.DisplayFor(model => model.Observacao)</h4>
                </dd>
            </dl>
        </div>

        <br />

            <div class="form-group">            
                  
                @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
                @Html.ActionLink("Alterar", "Edit", new { id = Model.CargoId }, new { @class = "btn btn-warning" })
                
            </div>
        
    </div>
</div>
<br />
<br />


