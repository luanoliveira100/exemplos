@model CondominioEstribo.Models.Inquilino

@{
    ViewBag.Title = "Cadastro de Inquilino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>

<script type="text/javascript">
    $(function () {
        $("#txtLote").autocomplete({
            source: '@Url.Action("GetLote")'
        });
    });
</script>


<br />
<br />

<div class="container">
<br />
<br />

    <div class="well">
        <h2>Cadastro de Inquilino</h2>
        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal"> 

                <div class="form-group">
                    @Html.Label("lblLote", " insira o Lote*", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBox("lote", null, new { id = "txtLote", @class = "form-control", placeholder = "Informe o Lote", required = "true" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeInquilino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomeInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe seu Nome", required = "true", autofocus = "autofocus", tabindex = "1" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.CPFInquilino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CPFInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o CPF", required = "true", onkeyup = "formataCPF(this,event)", maxlength = "14", tabindex = "2" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.RGInquilino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RGInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o RG", maxlength = "12", tabindex = "3", required = "true" } })
                    </div>
                </div> 

                
                <div class="form-group">
                    @Html.LabelFor(model => model.TelefoneInquilino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TelefoneInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe um Telefone Celular", required = "true", onkeyup = "formataTelefone(this,event)", maxlength = "14", tabindex = "4" } })
                    </div>
                </div>  


                <div class="form-group">
                    @Html.LabelFor(model => model.EmailInquilino, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmailInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe seu Email",  tabindex = "5" } })
                    </div>
                </div>                                  

                <div class="form-group">
                    @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe aqui uma Observação", tabindex = "7" } })
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("LblStatus", "Status*", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DropStatus", new List<SelectListItem>{
                            new SelectListItem{ Text = "Ativo", Value = "1", Selected = true},
                            new SelectListItem{ Text = "Inativo", Value = "2"},
                                }, "--Selecione--", new { @class = "form-control", disabled = "disabled" })
                    </div>
                </div>


                <div class="form-group">  
                    <div class="col-lg-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger", tabindex = "9" })
                        <input type="submit" value="Gravar" class="btn btn-success" tabindex="8" />     
                    </div>                                           
                                   
                </div>

            </div>
        }        
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
