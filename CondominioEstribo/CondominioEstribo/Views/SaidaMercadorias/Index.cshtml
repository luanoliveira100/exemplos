@model IEnumerable<CondominioEstribo.Models.SaidaMercadoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.3.1/css/buttons.dataTables.min.css" />


<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
<br />
<br />
<div class="well">
    <div>
       
        @Html.ActionLink("Create New", "Create", new { @class = "btn btn-info btn-xs" })
    </div>

    <table cellspacing="2" cellpadding="2" border="1" id="myTable">

        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.quantidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.data)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.observacao)
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.observacao)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.SaidaMercadoriaId }, new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Alterar", "Edit", new { id = item.SaidaMercadoriaId }, new { @class = "btn btn-warning btn-xs" })
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SaidaMercadoriaId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SaidaMercadoriaId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SaidaMercadoriaId })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>