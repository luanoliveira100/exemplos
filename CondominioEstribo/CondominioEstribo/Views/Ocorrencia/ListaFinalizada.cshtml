@model IEnumerable<CondominioEstribo.Models.Ocorrencia>

@{
    ViewBag.Title = "Lista De Ocorrências";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="container">
    <div class="well">
        <h2>Lista De Ocorrências Finalizadas</h2>
        <br />
        <br />
        @using (Html.BeginForm("ListaFinalizada", "Ocorrencia", FormMethod.Post))
        {
            <p><b>Buscar por Situação</b></p>
            <div class="form-horizontal">
                <div class="col-md-3">
                    @Html.DropDownList("DropBusca", new List<SelectListItem>{
                            new SelectListItem{ Text = "Dúvida", Value = "Dúvida"},
                            new SelectListItem{ Text = "Reclamação", Value = "Reclamação"},
                            new SelectListItem{ Text = "Sugestão", Value = "Sugestão"},
                            new SelectListItem{ Text = "Outros", Value = "Outros"},
                                }, "--Selecione a Busca--", new { @class = "form-control" })
                </div>
                <div class="col-md-0">
                    <button type="submit" class="btn btn-warning" tabindex="2">Pesquisar</button>
                    @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
                </div>


            </div>
        }
        <br />

        <table class="table table-striped table-hover">
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Situação
                </th>
                <th>
                    Desfecho
                </th>
                <th>
                    Data Abertura
                </th>
                <th>
                    Data Desfecho
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Situacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Desfecho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataAberturaOcorrencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDesfechoOcorrencia)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "DetailsFinalizada", new { id = item.OcorrenciaId }, new { @class = "btn btn-primary btn-xs" })
                    </td>
                </tr>
            }

        </table>
        <br />
        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-primary" })
    </div>
</div>
<br />
<script src="~/JS/Mascara.js" type="text/javascript"></script>


