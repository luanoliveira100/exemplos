@model CondominioEstribo.Models.Obra

@{
    ViewBag.Title = "Concluir Obras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <div class="well">
        <h2>Concluir Obras</h2>
        <br />
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.HiddenFor(model => model.ObraId)
                <div class="form-group">
                    @Html.LabelFor(model => model.TipoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TipoObra, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                   

                <div class="form-group">
                    @Html.LabelFor(model => model.DescricaoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.DescricaoObra, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("LblStatus", "Status*", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("DropStatus", new List<SelectListItem>{
                            new SelectListItem{ Text = "Em Andamento", Value = "1"},
                            new SelectListItem{ Text = "Concluída", Value = "2", Selected = true},
                                }, "--Selecione--", new { @class = "form-control", disabled = true })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ValorObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ValorObra, new { htmlAttributes = new { @class = "form-control", required = true } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataInicioObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataInicioObra, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataTerminoObra, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataTerminoObra, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-danger" })
                        <input type="submit" value="Gravar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/JS/Mascara.js" type="text/javascript"></script>
<br />

