@model CondominioEstribo.Models.Inquilino

@{
    ViewBag.Title = "Cadastro de Inquilino";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="row">

        <h2>Cadastro de Inquilino</h2>

        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="col-md-4">
                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeInquilino, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.NomeInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe seu Nome", required = "true", autofocus = "autofocus", tabindex = "1" } })
                            @Html.ValidationMessageFor(model => model.NomeInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TelefoneInquilino, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.TelefoneInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe um Telefone Celular", required = "true", onkeyup = "formataTelefone(this,event)", maxlength = "14", tabindex = "4"} })
                            @Html.ValidationMessageFor(model => model.TelefoneInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.Label("LblStatus", "Status*", new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.DropDownList("DropStatus", new List<SelectListItem>{
                            new SelectListItem{ Text = "Ativo", Value = "1", Selected = true},
                            new SelectListItem{ Text = "Inativo", Value = "2"},
                                }, "--Selecione--", new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                    

                    
                    <br />
                    <br />

                    <div class="form-group">
                        <div class="col-md-1">
                            <input type="submit" value="Gravar" class="btn btn-success" tabindex="6" />
                        </div>
                        <div class="col-md-offset-4">
                            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
                        </div>
                    </div>


                    <br />
                </div>             
                
            </div>

            <div class="col-md-4">
                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.CPFInquilino, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CPFInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o CPF", required = "true", onkeyup = "formataCPF(this,event)", maxlength = "14", tabindex = "2" } })
                            @Html.ValidationMessageFor(model => model.CPFInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.EmailInquilino, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.EmailInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe seu Email", required = "true", tabindex = "9" } })
                            @Html.ValidationMessageFor(model => model.EmailInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>     

                    <div class="form-group">
                        @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe aqui uma Observação", required = "true", tabindex = "5" } })
                            @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
                        </div>
                    </div>
                                                         
                    
                </div>
            </div>


            <div class="col-md-4">
                <div class="form-horizontal">

                    <div class="form-group">
                        @Html.LabelFor(model => model.RGInquilino, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.RGInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o RG", required = "true", onkeyup = "formataRG(this,event)", maxlength = "12", tabindex = "3" } })
                            @Html.ValidationMessageFor(model => model.RGInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>                  
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.LoteInquilino, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.LoteInquilino, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe o Lote á Residir", required = "true", tabindex = "5" } })
                            @Html.ValidationMessageFor(model => model.LoteInquilino, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

            </div>
        
        }
    </div>

</div>


<script src="~/JS/Mascara.js" type="text/javascript"></script>


<br />