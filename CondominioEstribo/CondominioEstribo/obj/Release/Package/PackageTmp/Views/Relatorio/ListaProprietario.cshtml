@model IEnumerable<CondominioEstribo.Models.Proprietario>


@{
    ViewBag.Title = "ListaProprietario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListaCondomino</h2>

<br />
<br />
@using (Html.BeginForm("ListaProprietario", "Relatorio", FormMethod.Post))
{
    <p>Pesquisar por Nome</p>
    <div class="form-horizontal">
        <div class="col-md-3">
            @Html.TextBox("txtNomeProprietario", "", new { @class = "form-control" })
        </div>
        <div class="col-md-0">
            <button type="submit" class="btn btn-warning">Pesquisar</button>
        </div>
    </div>
}

<br />

<table class="table table-striped table-hover">
    <thead>

        <tr>

            <th>
                NOME
            </th>
            <th>
                CPF
            </th>
            <th>
                RG
            </th>
            <th>
                ENDEREÇO
            </th>
            <th>
                NÚMERO
            </th>
            <th>
                CEP
            </th>
            <th>
                CELULAR
            </th>
            <th>
                EMAIL
            </th>
            <th>
                TELEFONE COMERCIAL
            </th>

            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr class="active">

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Logradouro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneCelular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneComercial)
            </td>

            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.UsuarioId }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.UsuarioId }, new { @class = "btn btn-primary btn-xs" })
            </td>
        </tr>
    }

</table>

<a href="javascript:window.history.go(-1)" class="btn btn-default">Voltar</a>

<script src="~/JS/Mascara.js" type="text/javascript"></script>


