@model IEnumerable<CondominioEstribo.Models.Lote>

@{
    ViewBag.Title = "Lista De Lotes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista De Lotes</h2>

<br />
<br />

@using (Html.BeginForm("Index", "Lote", FormMethod.Post))
{
    <p><b>Buscar por Lote</b></p>
    <div class="form-horizontal">
        <div class="col-md-3">
            @Html.TextBox("txtLote", "", new { @class = "form-control", placeholder = "Informe o Número do Lote", autofocus = "autofocus", tabindex = "1" })
        </div>
        <div class="col-md-0">
            <button type="submit" class="btn btn-primary" tabindex="2">Pesquisar</button>
            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
        </div>


    </div>
}

<br />

@*<fieldset>
    <div class="well">*@

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Número do Lote
                    </th>
                    <th>
                        Possui Área Construída
                    </th>
                    <th>
                        Observação
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroLote)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaConstruida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                    <td>
                        @Html.ActionLink("Detalhes", "Details", new { id = item.LoteId }, new { @class = "btn btn-info btn-xs" })
                        @Html.ActionLink("Alterar", "Edit", new { id = item.LoteId }, new { @class = "btn btn-warning btn-xs" })
                        <button type="submit" class="btn btn-danger btn-xs" onclick="MensagemConfirma('Atenção', 'Deseja Realmente Excluir este Lote ?', '@Url.Action("DeletarLote","Lote", new { id = item.LoteId})')">Excluir</button>
                    </td>
                </tr>
            }

        </table>


    @*</div>
</fieldset>*@

<br />

@Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })

