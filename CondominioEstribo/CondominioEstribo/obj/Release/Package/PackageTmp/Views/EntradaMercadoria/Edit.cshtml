@model CondominioEstribo.Models.EntradaMercadoria

@{
    ViewBag.Title = "Alterar Cadastro De Entrada De Mercadoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <div class="row">

        <h2>Alterar Cadastro De Entrada De Mercadoria</h2>

        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="col-md-4">
                <div class="form-horizontal">

                    @Html.HiddenFor(model => model.EntradaMercadoriaId)
                    <div class="form-group">
                        @Html.Label("lblProduto", "Produto*", new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.DropDownList("DropProduto", (List<SelectListItem>)ViewBag.Produto, "--Selecione o Produto--", new { @class = "form-control", autofocus = "autofocus", required = "true" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ValorTotalDaNF, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ValorTotalDaNF, new { htmlAttributes = new { @class = "form-control", onkeyup = "formataValor(this,event)", placeholder = "Informe o Valor da Nota Fiscal", required = "true" } })
                            @Html.ValidationMessageFor(model => model.ValorTotalDaNF, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class="col-md-1">
                        <input type="submit" value="Gravar" class="btn btn-success" />
                    </div>
                    <div class="col-md-offset-4">
                        @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
                    </div>
                </div>

                <br />

            </div>





                    <div class="col-md-4">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.Label("lblFornecedor", "Fornecedor*", new { @class = "control-label " })
                                <div class="col-md-12">
                                    @Html.DropDownList("DropFornecedor", (List<SelectListItem>)ViewBag.Fornecedor, "--Selecione o Fornecedor--", new { @class = "form-control", required = "true" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DataDaEntrada, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.DataDaEntrada, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Data", required = "true" } })
                                    @Html.ValidationMessageFor(model => model.DataDaEntrada, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>





                    <div class="col-md-4">
                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(model => model.QuantidadeInserida, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.QuantidadeInserida, new { htmlAttributes = new { @class = "form-control", placeholder = "Informe a Quantidade", required = "true" } })
                                    @Html.ValidationMessageFor(model => model.QuantidadeInserida, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Observacao, htmlAttributes: new { @class = "control-label" })
                                <div class="col-md-12">
                                    @Html.TextAreaFor(model => model.Observacao, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                                    @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>

        }

    </div>
</div>


<script src="~/JS/Mascara.js" type="text/javascript"></script>