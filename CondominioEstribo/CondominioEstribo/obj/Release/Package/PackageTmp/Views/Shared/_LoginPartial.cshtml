
<!-- Vai mostrar nome de usuário e Login ou Logoff na barra -->
<!-- se o usuário estiver ou não logado -->
@if (Session["Nome"] != null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Session["Nome"].ToString(), "", "", new { }, null)</li>
        <li>@Html.ActionLink("Sair", "Logout", "Account")</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Entrar", "Login", "Account")</li>
    </ul>
}
