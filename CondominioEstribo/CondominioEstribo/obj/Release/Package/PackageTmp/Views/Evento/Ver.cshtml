@model IEnumerable<CondominioEstribo.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFinal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaTodo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaTodo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.EventoId }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.EventoId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.EventoId })
            </td>
        </tr>
    }

</table>

