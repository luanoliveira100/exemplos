@model IEnumerable<CondominioEstribo.Models.Fornecedor>

@{
    ViewBag.Title = "Lista De Fornecedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista De Fornecedores</h2>

<br />
<br />

@using (Html.BeginForm("ListarTodosFornecedores", "Fornecedor", FormMethod.Post))
{
    <p><b>Buscar por Fornecedor</b></p>
    <div class="form-horizontal">
        <div class="col-md-3">
            @Html.TextBox("txtFornecedor", "", new { @class = "form-control", placeholder = "Informe o Nome do Fornecedor", autofocus = "autofocus", tabindex = "1" })
        </div>
        <div class="col-md-0">
            <button type="submit" class="btn btn-primary" tabindex="2">Pesquisar</button>
            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
        </div>


    </div>
}

<br />

