@model CondominioEstribo.Models.CadastroVeiculoFuncionario

@{
    ViewBag.Title = "Cadastro De Veículo De Funcionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row">

        <h2>Cadastro De Veículo De Funcionário</h2>

        <br />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="col-md-4">
                    <div class="form-horizontal">


                        <div class="form-group">
                            @Html.Label("lblNomeFuncionario", "Nome Do Funcionário*", new { @class = "control-label " })
                            <div class="col-md-10">
                                @Html.DropDownList("DropNomeFuncionario", (List<SelectListItem>)ViewBag.nomeFuncionario, "--Selecione--", new { @class = "form-control", required = "true" })
                            </div>
                        </div>  


                        @*<div class="form-group">
                            @Html.LabelFor(model => model.NomeDoFuncionario, htmlAttributes: new { @class = "control-label " })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.NomeDoFuncionario, new { htmlAttributes = new { @class = "form-control", required = "true", tabindex = "1", autofocus = "autofocus" } })
                                @Html.ValidationMessageFor(model => model.NomeDoFuncionario, "", new { @class = "text-danger" })
                            </div>                        
                        </div>*@

                    </div>

                    <br />
                    <br />

                    <div class="form-group">
                        <div class="col-md-1">
                            <input type="submit" value="Gravar" class="btn btn-success" tabindex="4" />
                        </div>
                        <div class="col-md-offset-4">
                            @Html.ActionLink("Cancelar", "Index", new { area = "Index", controller = "Home" }, new { @class = "btn btn-default" })
                        </div>
                    </div>


                    <br />


                </div>



                <div class="col-md-4">
                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.PlacaVeiculoFuncionario, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.PlacaVeiculoFuncionario, new { htmlAttributes = new { @class = "form-control", required = "true", tabindex = "2", placeholder = "Informe a Placa do Veículo", onkeyup = "ConsistePlaca(event.keyCode)", maxlength = "8" } })
                                @Html.ValidationMessageFor(model => model.PlacaVeiculoFuncionario, "", new { @class = "text-danger" })
                            </div>
                        </div>



                    </div>
                </div>
                

            }


    </div>
</div>



<script src="~/JS/Mascara.js" type="text/javascript"></script>







    
        
        
       
        

        



    
    


